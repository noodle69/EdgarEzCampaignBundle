{% extends '@EzPublishCore/content_fields.html.twig' %}

{% block edgarcampaign_field %}
    {% spaceless %}
        {% if not ez_is_field_empty(content, 'campaign') %}
            {% set field_value = field.value.campaigns %}
            {% for campaign in field_value %}
                {{ render_esi(controller(
                    'EdgarEzCampaignBundle:Front:subscribe',
                    { campaignId: campaign.id, contentId: content.id }
                )) }}
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock %}
