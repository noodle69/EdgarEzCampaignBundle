{% form_theme form with ['@EzPlatformAdminUi/form_fields.html.twig', '@EdgarEzCampaign/campaign/form_fields.html.twig', ] %}

<div class="modal fade ez-modal edgar-modal--campaign-schedule" id="campaign-schedule-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg class="ez-icon ez-icon--medium" aria-hidden="true">
                        <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#discard"></use>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <p class="ez-modal-body__main text-center">
                    {{ 'campaign.schedule.modal.message'|trans|desc('You are ready to shedule your Campaign.') }}
                </p>

                {% if actionUrl is defined %}
                    {{ form_start(form, {'action': actionUrl}) }}
                {% else %}
                    {{ form_start(form) }}
                {% endif %}
                    <div class="form-group ez-field-edit ez-field-edit--ezdatetime">
                        {{ form_label(form.schedule_time, null, { 'label_attr': {'class': 'form-control-label required ez-field-edit__label'} }) }}
                        {{ form_widget(form.schedule_time) }}
                    </div>
                    <div class="text-center">
                        {{ form_widget(form.schedule) }}
                    </div>
                {{ form_end(form) }}
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn--no" data-dismiss="modal">
                    {{ 'campaign.schedule.form.cancel'|trans|desc('Cancel') }}
                </button>
            </div>
        </div>
    </div>
</div>
